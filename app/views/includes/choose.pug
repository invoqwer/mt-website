    | Decide your fate.
    div
        a(href='javascript:choose()')= '!ch live | die'
    #choose-result
        | ...

    style. 
        #choose-container {
            text-align: center;
            padding-bottom: 1em;
        }
    script(src="https://code.jquery.com/jquery-3.6.0.min.js")
    script.
        async function coinflip() {
            url='https://api.random.org/json-rpc/4/invoke'

            data = {
                "jsonrpc": "2.0",
                "method": "generateIntegers",
                "params": {
                    "apiKey": "ae54dafe-dc8a-41d7-8b26-9fd6e8f6feb3",
                    "n": 1,
                    "min": 0,
                    "max": 1,
                    "replacement": true,
                    "base": 10
                },
                "id": 683489
            }

            return new Promise((resolve) => {
                fetch(url, {
                    method: "POST",
                    body: JSON.stringify(data),
                    headers: {
                        "Content-type": "application/json"
                    }
                })
                .then((res) => {
                    if (res.status != 200) {
                        console.log(res);
                        resolve(0);
                    }
                    return res.json();
                })
                .then((json) => {
                    const result = json.result.random.data[0];
                    resolve(result);
                });
            });
        }

        async function choose() {
            const result = document.getElementById('choose-result');
            result.textContent = "..."; 
            const status = await coinflip();
            const statusText = status ? "die ðŸ’€" : "live ðŸ˜‡";
            console.log(`Do not tempt destiny. ${statusText.toUpperCase()}.`);
            result.textContent = statusText;
        };
        