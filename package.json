{
  "name": "mt-website",
  "version": "1.0.0",
  "description": "My personal website",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "devclient": "browser-sync start --proxy=localhost:4000 --files 'app/assets/*' 'app/views/*'",
    "devserver": "webpack --watch --node-env=development --config webpack.config.js",
    "stylelint": "npx stylelint **/*.scss --fix",
    "jslint": "eslint . --fix",
    "lint": "npm run stylelint && npm run jslint",
    "build": "webpack --config webpack.config.js",
    "prod": "npm run lint && npm run build && node index.js"
  },
  "author": "MT",
  "license": "ISC",
  "dependencies": {
    "express": "^4.17.1",
    "js-yaml": "^4.1.0",
    "pug": "^3.0.2"
  },
  "devDependencies": {
    "copy-webpack-plugin": "^9.0.1",
    "css-loader": "^6.4.0",
    "eslint": "^8.0.1",
    "eslint-config-google": "^0.14.0",
    "html-webpack-plugin": "^5.4.0",
    "mini-css-extract-plugin": "^2.4.3",
    "nodemon-webpack-plugin": "^4.5.2",
    "sass": "^1.43.2",
    "sass-loader": "^12.2.0",
    "simple-pug-loader": "^0.2.1",
    "stylelint": "^14.0.0",
    "stylelint-config-standard-scss": "^2.0.1",
    "webpack": "^5.59.0",
    "webpack-cli": "^4.9.1"
  }
